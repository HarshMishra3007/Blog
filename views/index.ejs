<div class="author">
    <h1 class="author__heading"> Hi I am Harsh Mishra</h1>
    <p class="author__body">Web Developer and Content creator</p>
<img src="images/i1.jpg" alt="person looking out of the window" class="hero-image" width="981" height="528"/>
<section class="articles">
<h2 class="articles__heading"> Latest Posts</h2>
<ul class="article-ul">
    <% data.forEach(element => { %>
     
  
    <li>
        <a href="/post/<%= element._id %>">
            <span><%= element.title %></span>
            <span class="article-list__date"><%= element.createdAt.toDateString() %></span>
        </a>
    </li>
    <% }) %>
</ul>
<% if(nextPage !==null){ %>
    <a href="/?page=<%=nextPage%>" class="pagination">&lt;View Older Posts</a>
    <% } %>

</section>
</div>

